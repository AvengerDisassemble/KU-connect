{
  "name": "ku-connect-backend",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "Avengers Disassemble",
  "type": "commonjs",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest --ci --runInBand --verbose",
    "test:quiet": "jest --silent --runInBand",
    "test:verbose": "SHOW_LOGS=true jest --runInBand",
    "test:summary": "jest --verbose=false --runInBand",
    "test:failures": "jest --onlyFailures --verbose=false --runInBand",
    "test:nfr": "jest --testPathPatterns=\"(security|performance|reliability)\" --runInBand --verbose",
    "test:security": "jest --testPathPatterns=\"security\" --runInBand --verbose",
    "test:performance": "jest --testPathPatterns=\"performance\" --runInBand --verbose",
    "test:reliability": "jest --testPathPatterns=\"reliability\" --runInBand --verbose",
    "test:coverage": "jest --coverage --runInBand",
    "test:auth": "jest --testPathPatterns=\"auth\" --runInBand --verbose",
    "load-test": "echo 'Install Artillery: npm install -g artillery' && echo 'Then run: artillery run load-test/artillery.yml'",
    "load-test:quick": "artillery quick --count 10 --num 50 http://localhost:3000/api/jobs",
    "start": "node server.js",
    "start:test": "NODE_ENV=test node server.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.913.0",
    "@aws-sdk/s3-request-presigner": "^3.913.0",
    "@prisma/client": "^6.16.3",
    "bcrypt": "^6.0.0",
    "chai": "^6.0.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "fs-extra": "^11.3.2",
    "helmet": "^8.1.0",
    "install": "^0.13.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.14",
    "npm": "^11.6.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "qrcode": "^1.5.4",
    "resend": "^6.4.2",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "prisma": "^6.16.3",
    "supertest": "^7.1.4",
    "uuid": "^13.0.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
